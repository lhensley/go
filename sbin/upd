#!/bin/bash
# upd
#
# Include header file
logger Begin $0
PROGRAM_DIRECTORY=$(dirname $0)
source $PROGRAM_DIRECTORY/script-setup

# Update from github.com
_git

# Change permissions for Plex libraries
if [ $HOST_NAME == "oz" ]; then
	find /mnt/rerun/plex -type d -print -exec chmod 775 {} \; >> /dev/null 2>&1
	find /mnt/rerun/plex -type f -print -exec chmod 664 {} \; >> /dev/null 2>&1
	find /mnt/ssd1tb/plex -type d -print -exec chmod 775 {} \; >> /dev/null 2>&1
	find /mnt/ssd1tb/plex -type f -print -exec chmod 664 {} \; >> /dev/null 2>&1
	fi

# Invoke /usr/local/sbin/apply-configs
# chmod 500 $SBIN_DIR/apply-configs
$SBIN_DIR/apply-configs

# Update Dynamic DNS
ddclient -daemon 0

# Run apt updates
/usr/local/sbin/_run_apt_updates
