#!/bin/bash
# loop-forever

REPEATING_PROGRAM="/usr/local/sbin/master-loop"

while true; do # Endless loop
	logger "$0: Sleeping for 10 seconds."
	sleep 10 # Sleep for 10 seconds, just in case
	logger "$0: Woke up."
	logger "$0: Starting $REPEATING_PROGRAM"
	$REPEATING_PROGRAM
	logger "$0: Exit Code $? for $REPEATING_PROGRAM"
done # Endless loop
