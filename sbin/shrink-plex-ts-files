#!/bin/bash
# shrink-plex-ts-files

production_mode=true
debug_mode=false
# debug_mode=true
if $debug_mode ; then
  set -x
  fi

# Make sure only root can run our script
if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root."
  exit 1
fi

# Confirm that this host is oz
if [[ $(hostname -s) != "oz" ]]; then
  echo "This script can ony be run on server oz."
  exit 1
fi

PROGRAM_DIRECTORY=$(dirname $0)
source $PROGRAM_DIRECTORY/lhlib

ROOT_WORK="/mnt/ssd1tb/plex"
ROOT_STORE="/mnt/rerun/plex"

find "$ROOT_WORK" -type f -name "*.ts" -print -exec process-ts {} "$ROOT_WORK" "$ROOT_STORE" \; >> /dev/null 2>&1

exit 0
