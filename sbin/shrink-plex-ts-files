#!/bin/bash
# shrink-plex-ts-files

# Include script setup file
	source script-setup
	if [ ! $FUNCTIONS_ARE_DEFINED ]; then echo $0: Functions not defined. Aborting; logger $0: Functions not defined. Aborting; fi
	if [ ! $VARIABLES_ARE_DEFINED ]; then echo $0: Variables not defined. Aborting; logger $0: Variables not defined. Aborting; fi

f_require_file "PATHNAME[process_ts]"
f_require_directory "$VIDEO_WORK_DIRECTORY"
f_require_directory "$VIDEO_STORE_DIRECTORY"

find "$VIDEO_WORK_DIRECTORY" -type f -name "*.ts" -print -exec PATHNAME["process_ts"] {} "$VIDEO_WORK_DIRECTORY" "$VIDEO_STORE_DIRECTORY"; sleep 30 \;

# Include script footer file
	f_debug_variable "script_footer" "${PATHNAME[script_footer]}"
	source "${PATHNAME[script_footer]}"

exit 0
